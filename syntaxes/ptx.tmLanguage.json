{
	"$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
	"name": "NVIDIA PTX Assembly",
	"patterns": [
		{
			"include": "#comments"
		},
		{
			"include": "#keywords"
		},
		{
			"include": "#strings"
		}
	],
	"repository": {
		"comments": {
			"patterns": [
				{
					"name": "comment.line",
					"match": "\/\/.*"
				},
				{
					"name": "comment.line.double-slash",
					"match": "\/\/.*"
				},
				{
					"name": "comment.block",
					"begin": "\/\\*",
					"end": "\\*\/",
					"beginCaptures": {
						"0": {
							"name": "comment.block.begin"
						}
					},
					"endCaptures": {
						"0": {
							"name": "comment.block.end"
						}
					},
					"patterns": [
						{
							"name": "comment.block.content",
							"match": "[^*]+|\\*(?!/)"
						}
					]
				}
			]
		},
		"keywords": {
			"patterns": [{
				"name": "keyword.control.ptx",
				"match": "\\b(if|while|for|return)\\b"
			}]
		},
		"strings": {
			"name": "string.quoted.double.ptx",
			"begin": "\"",
			"end": "\"",
			"patterns": [
				{
					"name": "constant.character.escape.ptx",
					"match": "\\\\."
				}
			]
		}
	},
	"scopeName": "source.ptx"
}